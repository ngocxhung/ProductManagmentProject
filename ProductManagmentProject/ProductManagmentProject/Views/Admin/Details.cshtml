@model Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>Product Details</h2>

<div class="card">
    <div class="card-body">
        <div class="mb-3">
            <label class="form-label">Product Name</label>
            <input asp-for="ProductName" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <input asp-for="Description" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Price</label>
            <input asp-for="Price" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Stock</label>
            <input asp-for="Stock" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Category</label>
            <input asp-for="Category.CategoryName" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Product Image</label><br>
            <img src="@Url.Content("~/" + Model.ImageUrl)" class="img-thumbnail" width="200" />
        </div>

        <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
