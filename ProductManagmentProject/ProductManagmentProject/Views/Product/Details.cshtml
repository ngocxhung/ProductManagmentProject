@model ProductManagmentProject.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<h2 class="mb-3">Chi tiết sản phẩm</h2>

<div class="card shadow-sm p-4">
    <div class="row">
        <div class="col-md-4 text-center">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="~/@Model.ImageUrl" class="img-fluid rounded" alt="@Model.ProductName" style="max-width: 100%; height: auto;" />
            }
            else
            {
                <p class="text-muted">Không có ảnh</p>
            }
        </div>
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">ID:</dt>
                <dd class="col-sm-8">@Model.ProductId</dd>

                <dt class="col-sm-4">Tên sản phẩm:</dt>
                <dd class="col-sm-8">@Model.ProductName</dd>

                <dt class="col-sm-4">Mô tả:</dt>
                <dd class="col-sm-8">@Model.Description</dd>

                <dt class="col-sm-4">Giá:</dt>
                <dd class="col-sm-8">@Model.Price đ</dd>

                <dt class="col-sm-4">Tồn kho:</dt>
                <dd class="col-sm-8">@Model.Stock</dd>

                <dt class="col-sm-4">Danh mục:</dt>
                <dd class="col-sm-8">@Model.Category.CategoryName</dd>

                <dt class="col-sm-4">Ngày tạo:</dt>
                <dd class="col-sm-8">@Model.CreatedAt?.ToString("yyyy-MM-dd HH:mm")</dd>
            </dl>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">Chỉnh sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>
